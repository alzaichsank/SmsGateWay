<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey2"
    tools:context=".view.DetailOutboxActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_news">

        <ImageView
            android:id="@+id/avatar"
            android:layout_marginTop="@dimen/activity_50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_circle"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_below="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nama_report"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_5dp"
                    android:textColor="@color/text_black"
                    android:text=""
                    android:textSize="@dimen/text_size_16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_time"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_5dp"
                    android:textColor="@color/text_black"
                    android:text=""
                    android:textSize="@dimen/text_size_16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:text="Message"
                    android:gravity="center"
                    android:background="@color/text_white"
                    android:textSize="@dimen/text_size_14sp"
                    android:padding="@dimen/activity_4dp"
                    android:paddingTop="@dimen/activity_16dp"
                    android:paddingBottom="@dimen/activity_16dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/news_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_white"
                    android:gravity="start"
                    android:paddingTop="@dimen/activity_4dp"
                    android:text="-"
                    android:padding="@dimen/activity_10dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:text="Powered By Sms Gateway Insurance Team , 2018"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_12sp" />
    </RelativeLayout>
</RelativeLayout>